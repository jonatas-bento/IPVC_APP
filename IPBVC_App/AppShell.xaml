<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:IPBVC_App.Views"
       x:Class="IPBVC_App.AppShell">

    <FlyoutItem Title="Home">
        <ShellContent Route="home" ContentTemplate="{DataTemplate views:HomeScreen}" />
    </FlyoutItem>
    <FlyoutItem Title="Eventos">
        <ShellContent Route="eventos" ContentTemplate="{DataTemplate views:EventView}" />
    </FlyoutItem>
    <FlyoutItem Title="Aniversariantes">
        <ShellContent Route="aniversariantes" ContentTemplate="{DataTemplate views:BirthdayPage}" />
    </FlyoutItem>
    <FlyoutItem Title="Quem Somos">
        <ShellContent Route="quemsomos" ContentTemplate="{DataTemplate views:WhoWeArePage}" />
    </FlyoutItem>


</Shell>
